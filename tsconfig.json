{
    "compilerOptions": {
        "baseUrl": "/",
        "outDir": "./output/",

        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitOverride": true,
        "noImplicitThis": true,
        "strictBindCallApply": true,
        "alwaysStrict": true,
        "preserveConstEnums": true,
        "allowJs": false,

        "moduleResolution": "node",
        "sourceMap": false,
        "declarationMap": false,
        "declaration": true,
        "jsx": "react",
        "module": "esnext",
        "target": "esnext"
    },
    "include": [
        "source"
    ],
    "exclude": [
        "example",
        "node_modules",
        "output"
    ]
}
